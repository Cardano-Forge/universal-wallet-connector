{
  "name": "@ada-anvil/weld",
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "main": "./main.cjs",
  "module": "./main.js",
  "types": "./main.d.ts",
  "exports": {
    ".": {
      "import": "./main.js",
      "require": "./main.cjs",
      "types": "./main.d.ts"
    },
    "./utils": {
      "import": "./utils.js",
      "require": "./utils.cjs",
      "types": "./utils.d.ts"
    },
    "./react": {
      "import": "./react.js",
      "require": "./react.cjs",
      "types": "./react.d.ts"
    }
  },
  "files": [
    "**"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "biome lint --apply .",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "pack": "cd dist && npm pack && mv *.tgz .."
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.2",
    "@tailwindcss/typography": "^0.5.13",
    "@types/cbor-js": "^0.1.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "daisyui": "^4.10.5",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-toastify": "^10.0.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.0"
  },
  "peerDependencies": {
    "@types/react": ">=17.0.0",
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "cbor-js": "^0.1.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/Cardano-Forge/universal-wallet-connector",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cardano-Forge/universal-wallet-connector.git"
  },
  "bugs": {
    "url": "https://github.com/Cardano-Forge/universal-wallet-connector/issues"
  }
